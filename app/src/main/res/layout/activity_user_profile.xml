<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.UserProfileActivity">

    <ImageView
        android:id="@+id/img_user_profile"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_user" />

    <ImageView
        android:id="@+id/img_edit_user_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="94dp"
        android:layout_marginTop="94dp"
        app:layout_constraintStart_toStartOf="@+id/img_user_profile"
        app:layout_constraintTop_toTopOf="@+id/img_user_profile"
        app:srcCompat="@drawable/ic_edit" />

    <TextView
        android:clickable="true"
        android:id="@+id/tv_name_user_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="32dp"
        android:text="Himawan Alan Novianto"
        android:drawableStart="@drawable/ic_user_borderless"
        android:gravity="center_vertical"
        android:background="@drawable/btn_gray_5r"
        android:fontFamily="@font/roboto_regular"
        android:drawablePadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_user_profile"
        android:focusable="true" />

    <TextView
        android:clickable="true"
        android:id="@+id/tv_email_user_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_gray_5r"
        android:drawableStart="@drawable/ic_email_50t"
        android:drawablePadding="8dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="alannovianto11@gmail.com"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_user_profile"
        app:layout_constraintStart_toStartOf="@+id/tv_name_user_profile"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_user_profile"
        android:focusable="true" />
</androidx.constraintlayout.widget.ConstraintLayout>