<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="18dp"
    android:paddingHorizontal="16dp"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/tv_date_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="13 Nov 2021"
        android:textColor="@color/black_50t"
        app:layout_constraintBottom_toBottomOf="@+id/tv_description_balance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_description_balance"
        app:layout_constraintVertical_bias="0.7" />

    <TextView
        android:ellipsize="end"
        android:maxLines="1"
        android:id="@+id/tv_description_balance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Dana Manajemen"
        android:textColor="@color/black_50t"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_nominal_balance"
        app:layout_constraintStart_toEndOf="@+id/tv_date_balance"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nominal_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:textSize="16sp"
        android:text="Rp. 300.000"
        android:textColor="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>