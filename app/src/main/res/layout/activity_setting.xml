<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.SettingActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:padding="16dp"
        android:text="Customize"
        android:textColor="@color/primary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_notif_setting"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_regular"
            android:drawablePadding="16dp"
            android:text="Notification"
            android:drawableStart="@drawable/ic_notif_filled"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sw_notif_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="About"
        android:textColor="@color/primary"
        android:fontFamily="@font/roboto_medium"/>

    <TextView
        android:id="@+id/tv_language_setting"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Language"
        android:padding="16dp"
        android:drawableStart="@drawable/ic_globe"
        android:textSize="16dp"
        android:layout_gravity="center_vertical"
        android:drawablePadding="16dp"/>

    <TextView
        android:id="@+id/tv_rate_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:text="Rate Us"
        android:padding="16dp"
        android:drawableStart="@drawable/ic_star"
        android:textSize="16dp"
        android:layout_gravity="center_vertical"
        android:drawablePadding="16dp"/>

    <TextView
        android:id="@+id/tv_policy_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:drawableStart="@drawable/ic_security"
        android:textSize="16dp"
        android:layout_gravity="center_vertical"
        android:drawablePadding="16dp"/>

    <TextView
        android:id="@+id/tv_version_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Version 1.0.3"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:drawableStart="@drawable/ic_board_50t"
        android:textSize="16dp"
        android:layout_gravity="center_vertical"
        android:drawablePadding="16dp"/>


</LinearLayout>