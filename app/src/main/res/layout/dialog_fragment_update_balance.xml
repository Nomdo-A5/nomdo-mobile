<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_rounded">

    <TextView
        android:id="@+id/tv_title_update_balance"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Update Money Report"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_close_update_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_title_update_balance"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:startIconDrawable="@drawable/ic_email_50t"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        app:boxStrokeColor="@color/black"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_update_balance">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_title_update_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Report Title"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:nextFocusDown="@+id/edit_email_sign_up" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_income_update_balance"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:boxStrokeColor="@color/black"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/layout_title_update_balance"
        app:layout_constraintStart_toStartOf="@+id/layout_title_update_balance"
        app:layout_constraintTop_toBottomOf="@+id/layout_title_update_balance"
        app:startIconDrawable="@drawable/ic_money_50t">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_income_update_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Income"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:nextFocusDown="@+id/edit_email_sign_up" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_outcome_update_balance"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:boxStrokeColor="@color/black"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/layout_income_update_balance"
        app:layout_constraintStart_toStartOf="@+id/layout_income_update_balance"
        app:layout_constraintTop_toBottomOf="@+id/layout_income_update_balance"
        app:startIconDrawable="@drawable/ic_money_50t">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_outcome_update_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Outcome"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:nextFocusDown="@+id/edit_email_sign_up" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_description_update_balance"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:boxStrokeColor="@color/black"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/layout_outcome_update_balance"
        app:layout_constraintStart_toStartOf="@+id/layout_outcome_update_balance"
        app:layout_constraintTop_toBottomOf="@+id/layout_outcome_update_balance"
        app:startIconDrawable="@drawable/ic_description_50t">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_description_update_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:nextFocusDown="@+id/edit_email_sign_up" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.apachat.loadingbutton.core.customViews.CircularProgressButton
        android:id="@+id/btn_update_balance"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_accent"
        android:text="Update"
        android:textAllCaps="false"
        app:finalCornerAngle="30dp"
        app:initialCornerAngle="30dp"
        app:layout_constraintEnd_toEndOf="@+id/layout_description_update_balance"
        app:layout_constraintStart_toStartOf="@+id/layout_description_update_balance"
        app:layout_constraintTop_toBottomOf="@+id/layout_description_update_balance"
        app:spinning_bar_padding="8dp" />

    <com.apachat.loadingbutton.core.customViews.CircularProgressButton
        android:id="@+id/btn_delete_balance"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_gray"
        android:text="Delete"
        android:textAllCaps="false"
        app:finalCornerAngle="30dp"
        app:initialCornerAngle="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_update_balance"
        app:layout_constraintStart_toStartOf="@+id/btn_update_balance"
        app:layout_constraintTop_toBottomOf="@+id/btn_update_balance"
        app:spinning_bar_padding="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>