<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.nomdoa5.nomdo.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_my_workspaces"
        android:name="com.nomdoa5.nomdo.ui.workspaces.MyWorkspacesFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_my_workspaces">
        <action
            android:id="@+id/action_nav_my_workspaces_to_nav_boards"
            app:destination="@id/nav_boards" />
    </fragment>

    <fragment
        android:id="@+id/nav_shared_workspaces"
        android:name="com.nomdoa5.nomdo.ui.workspaces.SharedWorkspacesFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_shared_workspaces" />

    <fragment
        android:id="@+id/nav_detail_task"
        android:name="com.nomdoa5.nomdo.ui.task.DetailTaskFragment"
        android:label="Detail Task"
        tools:layout="@layout/fragment_detail_task"/>
</navigation>